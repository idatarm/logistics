@model Logistics.Models.Contact
<style>
    div.formContact .form-horizontal .controls 
    {
        font-size:16px;
        margin-top:5px;
        text-align:justify;
        line-height:25px;
    }
</style>
<h3 style="font-weight:600;font-size:24px; text-align:center">Details Message</h3>
<div class="formContact">   
    <div class="form-horizontal">
        <div class="control-group">
        <label class="control-label" for="inputName">Name:</label>
        <div class="controls">
            @Html.DisplayFor(model => model.Name)
        </div>
        </div>
          
        <div class="control-group">
        <label class="control-label" for="inputEmail">Email:</label>
        <div class="controls">
            @Html.DisplayFor(model => model.Email)
        </div>
        </div>
        <div class="control-group">
        <label class="control-label" for="inputSubject">Subject:</label>
        <div class="controls">
            @Html.DisplayFor(model => model.Subject)
        </div>
        </div>
        <div class="control-group">
        <label class="control-label" for="inputMessage">Message:</label>
        <div class="controls">
            @Html.DisplayFor(model => model.Message)
        </div>
        </div>        
    </div>      
</div>

<p style="text-align:center;padding-top:40px; font-size:17px;">
    @Html.ActionLink("Back to List Contacts", "Index")
</p>