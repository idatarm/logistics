@model Logistics.Models.News

@{
    ViewBag.Title = "Create";
}

<h3>Create a News</h3>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
#form .table th, .table td 
{
    border-top:none;
    
}

#form input[type="text"], #form textarea {
  font-size:16px;
  width:90%;
}
</style>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="formContact">
            <table class="table" id="form">
            <tr style="border-top:none">    
                <td>
                    @Html.LabelFor(model => model.Title)
                </td>
                <td>
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </td>
            </tr>            
            <tr>    
                <td>
                    @Html.LabelFor(model => model.Content)
                </td>
                <td>
                    @Html.TextAreaFor(model => model.Content, new { @cols = "80", @rows = "14" })
                    @Html.ValidationMessageFor(model => model.Content)
                </td>
            </tr>
            <tr>    
                <td>
                    @Html.LabelFor(model => model.DateTime)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.DateTime, new {@Value = System.DateTime.Now.ToString("dd/MM/yyyy") })
                    @Html.ValidationMessageFor(model => model.Content)
                </td>
            </tr>
            </table>
    </div>
        
    // Hiddent:
    
    @Html.HiddenFor(model => model.Description, new { @Value = "12" })
    <p>
        <input type="submit" value="Create" class="btn"/>
    </p>


}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
